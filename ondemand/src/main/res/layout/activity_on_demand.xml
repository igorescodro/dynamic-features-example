<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnDemandActivity">

    <ImageView
        android:id="@+id/image_ondemand_logo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_jigsaw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_ondemand"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@id/image_ondemand_logo"
        app:layout_constraintStart_toStartOf="@id/image_ondemand_logo"
        app:layout_constraintTop_toBottomOf="@id/image_ondemand_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
